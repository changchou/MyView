<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumText">
        <attr name="lineNum" format="integer"/>
        <attr name="xScroll" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RainView">
        <attr name="rainNum" format="integer"/>
        <attr name="size" format="integer"/>
        <attr name="rainColor" format="integer"/>
        <attr name="randColor" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MusicView">
        <attr name="itemNum" format="integer"/>
        <attr name="itemWidth" format="dimension"/>
        <attr name="musicColor" format="color"/>
        <attr name="musicRandColor" format="boolean"/>
        <attr name="musicType" format="integer">
            <enum name="RECT" value="1"/>
            <enum name="MRECT" value="2"/>
            <enum name="MMRECT" value="3"/>
        </attr>
    </declare-styleable>
</resources>